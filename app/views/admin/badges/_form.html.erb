<%= form_with model: [:admin, @badge], local: true do |form| %>

	<%= render 'shared/errors', resource: @badge %>

	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :image_url %><br>
		<%= form.text_field :image_url %>
	</p>

	<p>
		<%= form.label :rule_type %><br>
		<%= form.select :rule_type, options_for_select(Badge::RULES) %>
	</p>

	<p>
		<%= form.submit t('.create_rule'), class: 'btn btn-primary' %><br>		
	</p>
<% end %>



